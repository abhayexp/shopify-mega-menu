// handle child node
document.querySelectorAll('has-children').forEach(link=>{
  link.addEventListener("click", (e)=>{
  if (window.innerWidth <= 768) { 
      e.preventDefault(); 
      link.parentElement.classList.toggle("open"); // toggle submenu
    }
  })
})


 
  function renderMenuColumn(node, depth=0) {
    const colDiv = document.createElement('div');
    colDiv.className = "menu-col";

    // Title
    const link = document.createElement('a');
    link.textContent = node.label;
    link.href = `/collections/${node.linkType}`; 
    colDiv.appendChild(link);

    // Render links if present (Array of strings)
    if (Array.isArray(node.links) && node.links.length > 0) {
      const ul = document.createElement('ul');
      node.links.forEach(label => {
        const litem = document.createElement('li');
        const a = document.createElement('a');
        a.textContent = label;
        a.href = "#";
        litem.appendChild(a);
        ul.appendChild(litem);
      });
      colDiv.appendChild(ul);
    }

    // If there are children, render below, indented
   if (Array.isArray(node.children) && node.children.length > 0) {
    // Create the list container for this node
    const ul = document.createElement('ul');

    node.children.forEach(childNode => {
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.textContent = childNode.label;
      a.href = "https://trainchart.in/";
      li.appendChild(a);

      if (Array.isArray(childNode.children) && childNode.children.length > 0) {
        li.classList.add('has-submenu');

        // Create flyout container
        const flyout = document.createElement('div');
        flyout.className = 'submenu-dropdown';
        flyout.appendChild(renderMenuColumn(childNode, depth + 1));

        li.appendChild(flyout);
      }

      ul.appendChild(li);
    });

    colDiv.appendChild(ul);
  }
    return colDiv;
  }
      }
      catch(error)
      {
        console.log(error)
      }
  }


  fetchActiveMenu();
