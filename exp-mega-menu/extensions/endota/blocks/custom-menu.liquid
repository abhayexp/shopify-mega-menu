<script>

   async function fetchActiveMenu(){
     console.log('Fetching active menu...');
      const url = 'http://localhost:5000/api/menu/active';
      try {
        const response = await fetch(url);
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        const data = await response.json();
        console.log('Active menu data:', data);
        const activeMenu = data.menu.data.items;
        console.log(' Active menu items:', activeMenu)
        ;

        document.addEventListener('DOMContentLoaded', function() {

    // 1. Render menu
  const navList = document.getElementById('main-menu');
  activeMenu.forEach(menu => {
    const li = document.createElement('li');
    li.className = "nav-item";
    const link = document.createElement('a');
    link.textContent = menu.label;
    {% comment %} link.href = "https://onlineksrtcswift.com/"; {% endcomment %}
    link.href = `/collections/${menu.linkType}`; 
    link.className = "menu-link";
    li.appendChild(link);

    if (Array.isArray(menu.children) && menu.children.length > 0) {
      li.classList.add("has-children");
      
      {% comment %} toggle btn for mobile screen {% endcomment %}
      {% comment %} const toggleBtn = document.createElement("button");
      toggleBtn.className ="nav-toggle";
      toggleBtn.innerHTML = "&#9662;"; // ▼ arrow
      li.appendChild(toggleBtn); {% endcomment %}


      const modal = document.createElement('div');
      modal.className = "menu-modal";
      menu.children.forEach(childNode => {
        modal.appendChild(renderMenuColumn(childNode));
      });
      if (menu.images && Array.isArray(menu.images) && menu.isSliderVisible === true && menu.images.length > 1) {
        console.log("Slider will be rendered");
        console.log("image found", menu.images);
        {% comment %} slider area {% endcomment %}
        const sliderArea = document.createElement('div');
        sliderArea.className = "slider-area";

         // Build HTML
  sliderArea.innerHTML = `
    <div class="custom-slider-wrapper">
      <div class="custom-slider">
        ${menu.images
          .map(
            (slide, idx) => `
          <div class="slide${idx === 0 ? " active" : ""}">
            <img src="${slide.url}" alt="Slide ${idx + 1}">
            <div class="slide-text">
              <h3>${slide.title || ""}</h3>
              <div class="slide-description">
                ${slide.description || ""}
              </div>
            </div>
          </div>
        `
          )
          .join("")}
        <button class="prev-slide">&#10094;</button>
        <button class="next-slide">&#10095;</button>
      </div>
    </div>
  `;

        modal.appendChild(sliderArea);


        {% comment %} slider logic {% endcomment %}

        const slides = sliderArea.querySelectorAll(".slide");
        const prevBtn = sliderArea.querySelector(".prev-slide");
        const nextBtn = sliderArea.querySelector(".next-slide");
        let current =0;

        function showSlide(index){
          slides.forEach((s, i)=>{
            s.classList.toggle("active", i ==index);
          });
          current = index;
        }
         prevBtn.addEventListener("click",()=>{
           let newIndex = (current - 1 + slides.length) % slides.length;
           showSlide(newIndex);
          });

         nextBtn.addEventListener("click", ()=>{
         let newIndex = (current + 1) % slides.length;
        showSlide(newIndex);
         });
      }
        li.appendChild(modal);
      }
      navList.appendChild(li);
    });
    
  });

const navList = document.getElementById("main-menu");

